{
  "extends": "@edenx/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@api/*": [
        "./api/lambda/*"
      ]
    },
    "types": [
      "react",
      "react-dom"
    ],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2017",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src",
    "shared",
    "config",
    "edenx.config.ts",
    "tailwind.config.ts",
    "tailwind.config.ts",
    "api"
  ],
  "exclude": [
    "**/node_modules"
  ]
}